---
import Layout from '../layouts/Layout.astro'
import '../global.css'
import { PROFILE_URL } from '../data/social-media'
import { BackgroundTitle } from '../components/background-title/'
import { ProjectsSection } from '../components/projects-section'
import { Icon } from 'astro-icon'
---

<Layout>
  <main>
    <section class="whoami">
      <h1 class="full_name">Cristian Figueredo</h1>
      <h2 class="role">Mobile Engineer</h2>
    </section>
    <BackgroundTitle text="ABOUT ME" client:only>
      <p>
        Crafting user friendly and aesthetic UI designs is not just my
        profession, it's my passion.
      </p>
    </BackgroundTitle>
    <ProjectsSection client:only />
    <BackgroundTitle text="SKILLS" client:only>
      <p>React/React Native NodeJS AstroJS NextJS</p>
    </BackgroundTitle>
    <BackgroundTitle text="CONTACT" client:only>
      <div>
        <a target="_blank" href={PROFILE_URL.GITHUB}>
          <Icon name="mdi:github" />
        </a>
        <a target="_blank" href={PROFILE_URL.LINKEDIN}>
          <Icon name="mdi:linkedin" />
        </a>
        <a target="_blank" href={PROFILE_URL.TWITTER}>
          <Icon name="mdi:twitter" />
        </a>
      </div>
    </BackgroundTitle>
  </main>
</Layout>

<style>
  .whoami {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    height: 100vh;
    width: 100vw;
    margin-bottom: 20vw;
  }

  .full_name {
    font-size: 3rem;
    font-weight: 100;
    font-family: 'Valencia';
  }

  .role {
    font-size: 1rem;
    font-family: 'Avenir Regular';
  }

  .about,
  .skills,
  .contact {
    position: relative;
    height: 15vh;
    margin-bottom: 50vw;
  }

  .description {
    font-family: 'Avenir Regular';
    font-size: 1rem;
    z-index: 1;
    position: absolute;
    max-width: 40ch;
    top: 3ch;
    text-align: center;
    left: 2ch;
  }

  [astro-icon] {
    width: 2.5em;
    height: 2.5em;
    margin-right: 5vw;
    transition: transform 0.5s ease-out 0s;
  }
  [astro-icon]:hover {
    transform: scale(1.2);
  }

  .contact > div {
    position: absolute;
    margin-left: 30%;
    top: min(12vh, 50px);
  }

  /* xs (phones, 600px and down) */
  @media (max-width: 600px) {
  }

  /* sm (portrait tablets and large phones, 600px and up) */
  @media (min-width: 600px) {
    html {
      background-color: pink;
    }
  }

  /* md (landscape phones, tablets, 768px and up) */
  @media (min-width: 768px) {
    html {
      background-color: yellow;
    }
    .full_name {
      font-size: 5rem;
    }
    .role {
      font-size: 2rem;
    }
    .description {
      max-width: 60ch;
      left: 5ch;
    }
  }

  /* lg (laptops/desktops, 992px and up) */
  @media (min-width: 992px) {
    html {
      background-color: blue;
    }
    .full_name {
      font-size: 7rem;
    }
    .role {
      font-size: 2.5rem;
    }
    .description {
      font-size: 1.5rem;
    }
  }

  /* xl (large laptops and desktops, 1200px and up) */
  @media (min-width: 1200px) {
    html {
      background-color: purple;
    }
  }

  /* xl (ultra-wide desktops, 1200px and up) */
  @media (min-width: 1536px) {
    html {
      background-color: darkorange;
    }
    .description {
      font-size: 2rem;
      max-width: 60ch;
      left: 5ch;
    }
  }
</style>
