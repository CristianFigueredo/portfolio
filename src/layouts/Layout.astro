---
interface Props {
  title?: string
}

const { title } = Astro.props

const acceptLanguage = (
  Astro.request?.headers.get('accept-language') || ''
).toLowerCase()
const isSpanish = acceptLanguage.includes('es')
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title || 'Cristian Figueredo'}</title>
    <link
      rel="stylesheet"
      href="node_modules/modern-normalize/modern-normalize.css"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="bg-black overflow-hidden lg:overflow-auto">
    <div class="flex lg:hidden min-h-screen p-6 items-center justify-center">
      <div
        class="w-full max-w-[520px] rounded-3xl p-6 border border-white/10 bg-white/[0.04] backdrop-blur-xl"
      >
        <div
          class="font-['Avenir_Bold'] text-[28px] tracking-[-0.02em] text-white/90"
        >
          {isSpanish ? 'Versión de escritorio' : 'Desktop only'}
        </div>
        <div
          class="mt-2.5 font-['Avenir_Regular'] text-base leading-relaxed text-white/65"
        >
          {
            isSpanish
              ? 'Este sitio no está disponible en móvil. Ábrelo desde una computadora.'
              : 'This site isn’t available on mobile. Please open it on a desktop.'
          }
        </div>
      </div>
    </div>
    <div class="hidden lg:block">
      <slot />
    </div>
  </body>
</html>
